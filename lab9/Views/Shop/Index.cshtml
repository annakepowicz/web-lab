@model IEnumerable<lab9.Models.Article>

@{
    ViewData["Title"] = "Shop";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <h4 class="mb-3">Filters</h4>
            
            <div class="dropdown mb-4">
                <button class="btn btn-outline-primary dropdown-toggle w-100" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    @if (ViewBag.CurrentCategoryId != null)
                    {
                        var categories = ViewBag.Categories as IEnumerable<lab9.Models.Category>;
                        var selected = categories?.FirstOrDefault(c => c.Id == (int)ViewBag.CurrentCategoryId);
                        @(selected?.Name ?? "Choose category" )
                    }
                    else
                    {
                        <text>All categories</text>
                    }
                </button>
                
                <ul class="dropdown-menu w-100" aria-labelledby="categoryDropdown">
                    @* Opcja 1: Wszystkie kategorie *@
                    <li>
                        <a class="dropdown-item @(ViewBag.CurrentCategoryId == null ? "active" : "")" 
                           asp-action="Index" asp-route-categoryId="">
                            All categories
                        </a>
                    </li>
                    
                    @* Opcja 2: PÄ™tla po kategoriach z bazy *@
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var category in ViewBag.Categories)
                        {
                            <li>
                                <a class="dropdown-item @(ViewBag.CurrentCategoryId == category.Id ? "active" : "")" 
                                   asp-action="Index" asp-route-categoryId="@category.Id">
                                    @category.Name
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-9">
            @* NagÅ‚Ã³wek i przycisk przejÅ›cia do koszyka *@
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Articles</h4>
                <a asp-controller="Shop" asp-action="Cart" class="btn btn-info">
                    ðŸ›’ Go to Cart
                </a>
            </div>
            
            @if (!Model.Any())
            {
                <div class="container-info">There is no articles in this category.</div>
            }

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            @{
                                var imagePath = string.IsNullOrEmpty(item.ImageName) 
                                    ? "/image/default.jpg" 
                                    : "/upload/" + item.ImageName;
                            }
                            <img src="@imagePath" class="card-img-top" alt="@item.Title" 
                                 style="height: 200px; object-fit: cover;">

                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text text-muted">@item.Category?.Name</p>
                                <h6 class="card-subtitle mb-2 text-primary font-weight-bold">
                                 @item.Price.ToString("0.00") zÅ‚
                                </h6>
                                <a class="btn btn-secondary btn-lg" 
                                asp-controller="Article" 
                                asp-action="Details" 
                                asp-route-id="@item.Id">
                                Details
                                </a>
                            </div>
                            <form asp-controller="Shop" asp-action="AddToCart" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-outline-success w-100">Dodaj do koszyka</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>