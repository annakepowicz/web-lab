@model IEnumerable<lab9.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
    double totalCartSum = 0;
}

<div class="container mt-4">
    <h2>Your Shopping Cart</h2>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">Your cart is empty.</div>
        <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">Go back to shop</a>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th style="width: 150px;">Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var itemTotal = (double)item.Article.Price * item.Quantity;
                    totalCartSum += itemTotal;
                    
                    <tr>
                        <td>
                            @{
                                var imagePath = string.IsNullOrEmpty(item.Article.ImageName) 
                                    ? "/image/default.jpg"
                                    : "/upload/" + item.Article.ImageName;
                            }
                            <img src="@imagePath" alt="@item.Article.Title" style="width: 50px; height: 50px; object-fit: cover;" />
                        </td>
                        <td>@item.Article.Title</td>
                        <td>@item.Article.Price.ToString("0.00") zł</td>
                        <td>
                            <div class="d-flex align-items-center">
                                @* Przycisk minus *@
                                <form asp-action="UpdateQuantity" asp-route-id="@item.Article.Id" asp-route-delta="-1" method="post" class="me-1">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
                                </form>
                                
                                <span class="mx-2 fw-bold">@item.Quantity</span>
                                
                                @* Przycisk plus *@
                                <form asp-action="UpdateQuantity" asp-route-id="@item.Article.Id" asp-route-delta="1" method="post" class="ms-1">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                                </form>
                            </div>
                        </td>
                        <td>@itemTotal.ToString("0.00") zł</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-active">
                    <td colspan="4" class="text-end"><strong>Grand Total:</strong></td>
                    <td><strong>@totalCartSum.ToString("0.00") zł</strong></td>
                </tr>
            </tfoot>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Shop" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
            <button class="btn btn-success btn-lg">Checkout</button>
        </div>
    }
</div>