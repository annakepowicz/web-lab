@page
@model lab11.Pages.Articles.IndexModel
@{
    ViewData["Title"] = "Articles List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>List of Articles</h2>
        @* Przycisk dodawania nowego artykułu *@
        <a asp-page="Create" class="btn btn-success">Add New Article</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Article[0].Title)</th>
                <th>@Html.DisplayNameFor(model => model.Article[0].Price)</th>
                <th>Category</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Article) {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Price.ToString("F2") zł</td>
                    <td>@item.Category?.Name</td>
                    <td class="text-center">
                        @* Grupa przycisków akcji *@
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="alert alert-secondary text-end">
        <strong>Total Sum of All Articles: @Model.TotalPrice.ToString("F2") zł</strong>
    </div>
</div>