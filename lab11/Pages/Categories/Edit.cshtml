@page
@model lab11.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit Category";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Formularz w Razor Pages domyślnie wysyła POST do obecnej strony *@
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* Ukryte pole ID jest niezbędne do edycji *@
            <input type="hidden" asp-for="Category.Id" />

            <div class="form-group mb-3">
                <label asp-for="Category.Name" class="control-label"></label>
                @* Odwołujemy się do Category.Name zamiast samego Name  *@
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @* Zmiana asp-action="Index" na asp-page="./Index"  *@
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}